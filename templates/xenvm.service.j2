# xenvm.service
# {{ ansible_managed }}
[Unit]
Description     = Manage given xen vm
Documentation   = https://github.com/stuvusIT/xen_vm_management
After           = xen
After           = xenstored
Wants           = xen.service
Wants           = xenstored.service
Wants           = %i.mount

[Service]
Type            = idle
ExecStart       = {{ xen_vman_xl_path }} create {{ xen_vman_vm_config_path }}/{{ vm.org }}/%i -F
ExecStop        = {{ xen_vman_xl_path }} shutdown -F %i
TimeoutStartSec = 10
TimeoutStopSec  = 300
